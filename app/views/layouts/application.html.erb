<!DOCTYPE html>
<html>
  <head>
    <title>ShareHouseworkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar sticky-top navbar-light bg-light">
  <a class="navbar-brand" href="#">ロゴ</a>
    <%= link_to "ホーム", root_path %>
    <% if user_signed_in? %>
      <% if current_user.admin? %>
        <%= link_to '管理者画面', rails_admin_path  %>
      <% end %>
      <%= link_to "マイページ", user_path(current_user.id) %>
      <%= link_to 'ユーザー一覧', users_path  %>
      <%= link_to "投稿する", new_article_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
      <%= link_to '管理者ゲストログイン', users_admin_guest_sign_in_path, method: :post %>
      <%= link_to "アカウント登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>
    </nav>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>

    <%= link_to "Back", 'javascript:history.back()' %>
  </body>
</html>
