<div class="container mt-5">
  <div class="row col-md-8 mx-auto">
    <h2><%= t('.sign_up') %></h2>
  </div>
  <div class="row col-md-8 mx-auto">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="container col-md-12">
  <div class="row col-md-6 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-5">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: '名前を入力' %>
      </div>

      <div class="field mt-5">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレスを入力' %>
      </div>

      <div class="field mt-5">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワードを入力' %>
      </div>

      <div class="field mt-5">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワードを入力' %>
      </div>

      <div class="actions my-5">
        <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>