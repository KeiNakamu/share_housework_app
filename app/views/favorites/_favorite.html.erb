<div id="favorite_<%= @article.id %>">
  <% unless @article.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger', remote: true %>
    <% else %>
      <%= link_to 'お気に入り', favorites_path(article_id: @article.id), method: :post, class: 'btn btn-primary', remote: true %>
    <% end %>
  <% end %>
</div>