<% if !user_signed_in? %>
  <%= article.favorites.length %>
<% elsif current_user.favorited_by?(article.id) %>
  <%= link_to article_favorite_path(article, article.favorites), method: :delete, remote: true do %>
    <i class="fa-solid fa-star"></i>
  <% end %>
  <%= article.favorites.length %>
<% else %>
  <%= link_to article_favorites_path(article), method: :post, remote: true do %>
    <i class="fa-regular fa-star"></i>
  <% end %>
  <%= article.favorites.length %>
<% end %>
