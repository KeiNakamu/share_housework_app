<header>
  <div class="jumbotron text-center hero " style="background:url(<%= asset_path 'file6.jpg' %>); background-size:cover; background-position:center bottom;">
    <div class="container">
      <h2 class="favorites mb-3">お気に入りの記事をストックしてみよう</h2>
      <h4 class="favorites mt-5">↓ お気に入り一覧はこちら ↓</h4>
    </div>
  </div>
</header>

<div class="container", style="margin-bottom: 300px;">
  <div class="row col-md-12 justify-content-center">
    <table>
      <thead>
        <tr>
          <th>サムネイル</th>
          <th>タイトル</th>
          <th>ユーザー</th>
        </tr>
      </thead>

      <tbody>
        <div class="card mb-4 text-center" >
          <div class="row no-gutters">
            <div class="col-md-3">
              <% @favorites.each do |favorite| %>
                <tr>
                  <td class="favorites">
                  <% if favorite.article.image? %>
                    <%= link_to (image_tag favorite.article.image.url, size: '100x100'), favorite.article, class: 'mr-3' %>
                  <% else %>
                    <%= link_to (image_tag 'no_image.png', size: '100x100'), favorite.article, class: 'mr-3' %>
                  <% end %>
                  <td><%= favorite.article.title %></td>
                  <td><%= link_to favorite.article.user.name, user_path(favorite.user),class: "link-to mx-4" %></td>
                  <td>投稿日:<%= favorite.article.created_at.strftime("%Y/%m/%d") %></td>
                </tr>
              <% end %>
            </div>
          </div>
        </div>
      </tbody>
    </table>
  </div>
</div>
