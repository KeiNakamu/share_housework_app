<h2>お気に入り一覧</h2>


<table>
  <thead>
    <tr>
      <th></th>
      <th>Tittle</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>

      <tr>
        <td><%= favorite.user.name %></td>
        <td><%= favorite.article.title %></td>
        <td class="image">
        <%= link_to (image_tag favorite.article.image.url if favorite.article.present?), @article %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
