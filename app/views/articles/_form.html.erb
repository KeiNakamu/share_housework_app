<%= form_with(model: @article, local: true) do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= image_tag(article.image.url) if article.image && article.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status %>
  </div>

  <%= form.hidden_field :user_id, :value => current_user.id%>

  <h3>Procedure</h3>

  <% n = 0 %>
  <%= form.fields_for :procedure  do |procedure| %>
  <h3><strong>手順<%= n +=1 %></strong></h3>

  <div class="field">
    <%= procedure.label :image %>
    <%= procedure.file_field :image %>
    <%= procedure.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= procedure.label :content %>
    <%= procedure.text_area :content %>
  </div>

  <div class="field">
    <%= procedure.label :date %>
    <%= procedure.date_field :date %>
  </div>

  <div class="field">
    <%= procedure.label :deadline %>
    <%= procedure.date_field :deadline %>
  </div>
  <% end %>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
