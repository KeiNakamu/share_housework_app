<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Image</th>
      <th>Status</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |article| %>
      <tr>
        <td><%= link_to article.user.name, user_path(article.user) %></td>
        <td><%= article.title %></td>
        <td class="image">
        <%= link_to (image_tag article.image.url if article.image.present?), article %>
        </td>
        <td><%= article.status %></td>
        <td><%= article.liked_users.count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
