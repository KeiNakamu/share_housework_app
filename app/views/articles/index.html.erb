<h1>Articles</h1>

<h2>検索</h2>
<%= search_form_for @q, url: search_articles_path do |f| %>
  <%= f.label :title_cont, 'タイトル' %>
  <%= f.search_field :title_cont %>
  <%= f.submit '検索' %>
<% end %>
<%= form_with url: articles_path, method: :get, local: true do |form| %>
  <%= form.select("category_id", Category.pluck(:name, :id), { include_blank: true }) %>
  <%= form.submit 'Search', name: nil %>
<% end %>
<br><hr>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Image</th>
      <th>Category</th>
      <th>Status</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.user.name, user_path(article.user) %></td>
        <td><%= article.title %></td>
        <td class="image">
          <%= link_to (image_tag article.image.url if article.image.present?), article %>
        </td>
        <td>
          <%# article.categories.each do |category| %>
            <%#= category.name %>
          <%# end %>
        </td>
        <td><%= article.status %></td>
        <td><%= article.liked_users.count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
