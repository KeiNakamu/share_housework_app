<h3>検索</h3>
<%= search_form_for @article_search  do |f| %>
  <%= f.select( :sorts, { '並び替え': '並び替え', '古い順': 'updated_at asc', '新しい順': 'updated_at desc', 'いいね!の多い順': 'likes_count desc' } , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} ) %>
  <%= f.search_field :title_cont, placeholder: 'タイトル検索' %>
  <%= f.submit '検索' %>
  <br>
  <%= f.collection_check_boxes :categories_id_in, Category.all, :id ,:name %>
  <br>
<% end %>
<br><hr>
  <thead>
  <% if @article_search.present? %>
      <p>表示件数は：<%= @count %>件です</p>
  <% end %>
  </thead>

  <tbody>
    <div class="card-deck">
      <% @articles.each do |article| %>
      <div class="col-md-3">
        <div class="card">
          <div class="article_image">
            <% if article.image? %>
              <%= link_to (image_tag article.image.url), article %>
            <% else %>
              <%= link_to (image_tag 'no_image.png'),article %>
            <% end %>
          </div>
          <p><%= article.title %></p>
          <p>
            <% article.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </p>
          <p><%= link_to article.user.name, user_path(article.user), class: "link-to" %></p>
          <p><%= article.updated_at.strftime("%Y/%m/%d") %></p>
          <p><i class="fa fa-heart unlike-btn"></i><%= article.liked_users.count %></p>
      </div>
    </div>
    <% end %>
  </tbody>
  <div class='p-top__paginate'><%= paginate(@articles) %></div>
</div>