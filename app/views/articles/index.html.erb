<h1>Articles</h1>

<h2>検索</h2>
<%= search_form_for @article_search  do |f| %>
  <%= f.label :title_cont, 'Title' %>
  <%= f.search_field :title_cont %>
  <br>
    <% Category.all.each do |category| %>
      <%= f.check_box :category_ids, { multiple: true, checked: category[:checked], disabled: category[:disabled], include_hidden: false }, category[:id] %>
      <%= f.label :category_ids, category.name, class:"label-bg", value: category[:id]%>
    <% end %>
    <br>
    <%= f.submit '検索' %>
<% end %>
<br><hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Image</th>
      <th>Category</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.user.name, user_path(article.user) %></td>
        <td><%= article.title %></td>
        <td class="image">
          <%= link_to (image_tag article.image.url if article.image.present?), article %>
        </td>
        <td>
          <% article.categories.each do |category| %>
            <%= category.name %>
          <% end %>
        </td>
        <td><%= article.liked_users.count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
