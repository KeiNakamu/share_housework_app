<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
<% else %>
  <h1><%= @user.name %>さんのページ</h1>
  <%= render 'follow_form', user: @user %>
<% end %>

<% if user_signed_in? && @user == current_user %>
  <%= link_to "プロフィール編集", edit_user_registration_path(current_user) %><br>
  <%= @user.following.count %><%= link_to "フォロー", followings_user_path(@user) %><br>
  <%= @user.followers.count %><%= link_to "フォロワー", followers_user_path(@user) %><br>
  <%= link_to "お気に入り", favorites_path %>
<% end %>

<h3>ユーザー名: <%= @user.name %></h3>
<% if user_signed_in? && @user == current_user %>
  <h3>メールアドレス: <%= @user.email %></h3>
<% end %>
<% if @user.image? %>
  <%= image_tag @user.image.url, class: 'profile_image' %>
<% else %>
  <%= image_tag 'icon.jpeg', class: 'profile_image' %>
<% end %>
<h3>プロフィール</h3>
<%= @user.profile %>

<h4><%= @user.name %>さんの投稿</h4>
<div class="table-responsive-sm">
  <div class="m-2 p-5">
    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.articles.each do |article| %>
          <tr class = "task_row">
            <td class = "article_image"><%= link_to (image_tag article.image.url if article.image.present?), article %></td>
            <td><%= article.title %></td>
            <td>投稿日:<%= article.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
