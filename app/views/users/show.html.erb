<% if user_signed_in? && @user == current_user %>
  <h1>マイページ</h1>
<% else %>
  <h1><%= @user.name %>さんのページ</h1>
  <%= render 'follow_form', user: @user %>
<% end %>

<% if user_signed_in? && @user == current_user %>
  <%= link_to "プロフィール編集", edit_user_path(current_user) %><br>
  <%= link_to "フォロー", followings_user_path(@user) %><br>
  <%= link_to "フォロワー", followers_user_path(@user) %><br>
  <%= link_to "お気に入り" %>
<% end %>

<h3>ユーザー名: <%= @user.name %></h3>
<% if @user.image? %>
  <%= image_tag @user.image.url, size: '200x200' %>
<% else %>
  <%= image_tag 'icon.jpeg', size: '200x200' %>
<% end %>
<%= @user.profile %>

<h4><%= @user.name %>さんの投稿</h4>
<div class="table-responsive-sm">
  <div class="m-2 p-5">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.articles.each do |article| %>
          <tr class = "task_row">
            <td><%= link_to article.title, article %></td>
            <td><%= link_to (image_tag article.image.url if article.image.present?), article %></td>
            <td><%= article.status %></td>
            <td><%= article.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
