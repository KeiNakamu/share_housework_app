<div id="follow_form_<%= user.id %>">
  <% unless current_user.following?(user) %>
    <%= form_with(model: current_user.active_relationships.build(followed_id: user.id))  do |form| %>
      <%= form.hidden_field :followed_id %>
      <%= form.submit "フォロー" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.active_relationships.find_by(followed_id: user.id), method: :delete ) do |form| %>
      <%= form.submit "フォロー中" %>
    <% end %>
  <% end %>
</div>