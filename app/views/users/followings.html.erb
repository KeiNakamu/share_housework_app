<header>
  <div class="jumbotron text-center hero " style="background:url(<%= asset_path 'file6.jpg' %>); background-size:cover; background-position:center bottom;">
    <div class="container">
      <h2 class="followings mb-3">共有仲間を増やしていこう！</h2>
      <p class="followings">↓ フォロワー 一覧はこちら ↓</p>
      <%= link_to "フォロワー", followers_user_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</header>

<div class="container">
  <div class="row col-md-12 justify-content-center">
    <h3>フォロー一覧</h3>
  </div>
</div>

<div class="container">
  <div class="row col-md-12 justify-content-center">
    <p><%= @user.following.count %>フォロー</p><br>
  </div>
</div>

<div class="container", style="margin-bottom: 300px;">
  <div class="row col-md-12 justify-content-center">
    <table>
      <tbody>
        <div class=" mb-4 text-center" >
          <div class="row no-gutters">
            <div class="col-md-3">
              <% @users.each do |user| %>
                <tr>
                  <td><%= link_to user.name, user, class: "link-to" %></td>
                  <td><%= render 'follow_form', user: user %></td>
                </tr>
              <% end %>
            </div>
          </div>
        </div>
      </tbody>
    </table>
  </div>
</div>
