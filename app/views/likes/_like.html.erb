<% if !user_signed_in? %>
  <i class="fa fa-heart like-btn"></i>
  <%= article.likes.length %>
<% elsif current_user.liked_by?(article.id) %>
  <%= link_to article_like_path(article, article.likes), class: "like-link", method: :delete, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  <%= article.likes.length %>
<% else %>
  <%= link_to article_likes_path(article), class: "like-link", method: :post, remote: true do %>
    <i class="fa fa-heart like-btn"></i>
  <% end %>
  <%= article.likes.length %>
<% end %>